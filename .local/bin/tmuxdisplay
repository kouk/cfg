#!/bin/sh

if [ -n "$TMUX" ] ; then
    XTTY=$(tmux lsc -t $(tmux lsp -F '#{session_name}') -F '#{client_termname} #{client_tty}' | grep -E '(rxvt|xterm)')
    if [ -n "$XTTY" ] ; then
        s=$(ps -t ${XTTY#* /dev/} -o sid=|uniq)
        ps eww -p $s -o command= | sed -e 's/ [a-zA-Z_]*=/\
            &/g' | grep DISPLAY=
    fi
fi
